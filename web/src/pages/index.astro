---
// Server-side: could fetch initial data here if needed
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EPDEnvClock Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --bg-primary: #fafafa;
        --bg-secondary: #f0f0f0;
        --bg-card: #ffffff;
        --text-primary: #1a1a1a;
        --text-secondary: #666666;
        --accent-temp: #e74c3c;
        --accent-humidity: #3498db;
        --accent-co2: #f39c12;
        --accent-battery: #27ae60;
        --border-color: #e0e0e0;
        --shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif;
        background: var(--bg-primary);
        color: var(--text-primary);
        min-height: 100vh;
        padding: 4rem 2rem 2rem;
      }

      .dashboard {
        max-width: 1200px;
        margin: 0 auto;
      }

      header {
        margin-bottom: 2rem;
      }

      h1 {
        font-size: 1.75rem;
        font-weight: 600;
        color: var(--text-primary);
      }

      h1 span {
        color: var(--text-secondary);
        font-weight: 400;
      }

      .stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
      }

      @media (max-width: 768px) {
        body {
          padding: 1rem 0.75rem;
        }

        header {
          margin-bottom: 1rem;
        }

        h1 {
          font-size: 1.3rem;
        }

        .stats {
          grid-template-columns: repeat(2, 1fr);
          gap: 0.5rem;
          margin-bottom: 1rem;
        }

        .stat-card {
          padding: 0.75rem;
          border-radius: 8px;
        }

        .stat-label {
          font-size: 0.65rem;
          margin-bottom: 0.25rem;
        }

        .stat-value {
          font-size: 1.6rem;
        }

        .stat-unit {
          font-size: 0.75rem;
        }

        .time-selector {
          flex-wrap: wrap;
          gap: 0.35rem;
          margin-bottom: 1rem;
        }

        .time-btn {
          padding: 0.35rem 0.6rem;
          font-size: 0.7rem;
        }

        .charts {
          gap: 0.75rem;
        }

        .chart-container {
          padding: 0.75rem;
          border-radius: 8px;
        }

        .chart-title {
          font-size: 0.8rem;
          margin-bottom: 0.5rem;
        }

        .chart-wrapper {
          height: 180px;
        }

        .last-update {
          margin-top: 0.75rem;
          font-size: 0.65rem;
        }
      }

      .stat-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: var(--shadow);
      }

      .stat-label {
        font-size: 0.8rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        font-family: 'Space Mono', monospace;
      }

      .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        font-family: 'Space Mono', monospace;
      }

      .stat-value.temp { color: var(--accent-temp); }
      .stat-value.humidity { color: var(--accent-humidity); }
      .stat-value.co2 { color: var(--accent-co2); }
      .stat-value.battery { color: var(--accent-battery); }

      .stat-unit {
        font-size: 1rem;
        color: var(--text-secondary);
        font-weight: 400;
      }

      .charts {
        display: grid;
        gap: 1.5rem;
      }

      .chart-container {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: var(--shadow);
      }

      .chart-title {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        font-weight: 500;
      }

      .chart-wrapper {
        position: relative;
        height: 280px;
      }

      .time-selector {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
      }

      .time-btn {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        cursor: pointer;
        font-family: 'Space Mono', monospace;
        font-size: 0.8rem;
        transition: all 0.2s;
      }

      .time-btn:hover {
        background: var(--bg-card);
        border-color: var(--text-secondary);
      }

      .time-btn.active {
        background: var(--text-primary);
        color: var(--bg-card);
        border-color: var(--text-primary);
      }

      .last-update {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-top: 1.5rem;
        text-align: right;
        font-family: 'Space Mono', monospace;
      }

      .error-message {
        background: #fee;
        border: 1px solid #fcc;
        color: #c00;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="dashboard">
      <header>
        <h1>EPDEnvClock <span>Dashboard</span></h1>
      </header>

      <div class="error-message" id="error-message"></div>

      <div class="time-selector">
        <button class="time-btn" data-hours="6">6H</button>
        <button class="time-btn" data-hours="12">12H</button>
        <button class="time-btn active" data-hours="24">24H</button>
        <button class="time-btn" data-hours="72">3D</button>
        <button class="time-btn" data-hours="168">7D</button>
      </div>

      <div class="stats">
        <div class="stat-card">
          <div class="stat-label">Temperature</div>
          <div class="stat-value temp" id="current-temp">--<span class="stat-unit">°C</span></div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Humidity</div>
          <div class="stat-value humidity" id="current-humidity">--<span class="stat-unit">%</span></div>
        </div>
        <div class="stat-card">
          <div class="stat-label">CO₂</div>
          <div class="stat-value co2" id="current-co2">--<span class="stat-unit">ppm</span></div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Battery</div>
          <div class="stat-value battery" id="current-battery">--<span class="stat-unit">V</span></div>
        </div>
      </div>

      <div class="charts">
        <div class="chart-container">
          <div class="chart-title">Temperature & Humidity</div>
          <div class="chart-wrapper">
            <canvas id="chart-temp-humidity"></canvas>
          </div>
        </div>

        <div class="chart-container">
          <div class="chart-title">CO₂ Concentration</div>
          <div class="chart-wrapper">
            <canvas id="chart-co2"></canvas>
          </div>
        </div>

        <div class="chart-container">
          <div class="chart-title">Battery Voltage</div>
          <div class="chart-wrapper">
            <canvas id="chart-battery"></canvas>
          </div>
        </div>
      </div>

      <div class="last-update" id="last-update"></div>
    </div>

    <script>
      import Chart from 'chart.js/auto';

      interface SensorData {
        timestamp: number;
        temperature: number;
        humidity: number;
        co2: number;
        battery_voltage: number | null;
      }

      interface ApiResponse {
        success: boolean;
        count: number;
        data: SensorData[];
      }

      let tempHumidityChart: Chart | null = null;
      let co2Chart: Chart | null = null;
      let batteryChart: Chart | null = null;
      let currentHours = 24;

      function showError(message: string): void {
        const el = document.getElementById('error-message');
        if (el) {
          el.textContent = message;
          el.style.display = 'block';
        }
      }

      function hideError(): void {
        const el = document.getElementById('error-message');
        if (el) {
          el.style.display = 'none';
        }
      }

      async function fetchData(hours: number): Promise<SensorData[]> {
        try {
          const response = await fetch(`/api/data?hours=${hours}`);
          if (!response.ok) {
            throw new Error(`HTTP ${response.status}`);
          }
          const json: ApiResponse = await response.json();
          console.log('Fetched data:', json.count, 'points');
          hideError();
          return json.data || [];
        } catch (error) {
          console.error('Failed to fetch data:', error);
          showError(`Failed to fetch data: ${error instanceof Error ? error.message : 'Unknown error'}`);
          return [];
        }
      }

      function updateCurrentValues(data: SensorData[]): void {
        if (data.length === 0) return;

        const latest = data[data.length - 1];

        const tempEl = document.getElementById('current-temp');
        const humidityEl = document.getElementById('current-humidity');
        const co2El = document.getElementById('current-co2');
        const batteryEl = document.getElementById('current-battery');
        const updateEl = document.getElementById('last-update');

        if (tempEl) {
          tempEl.innerHTML = `${latest.temperature?.toFixed(1) ?? '--'}<span class="stat-unit">°C</span>`;
        }
        if (humidityEl) {
          humidityEl.innerHTML = `${latest.humidity?.toFixed(1) ?? '--'}<span class="stat-unit">%</span>`;
        }
        if (co2El) {
          co2El.innerHTML = `${latest.co2 ?? '--'}<span class="stat-unit">ppm</span>`;
        }
        if (batteryEl) {
          batteryEl.innerHTML = `${latest.battery_voltage?.toFixed(2) ?? '--'}<span class="stat-unit">V</span>`;
        }
        if (updateEl) {
          updateEl.textContent = `Last data: ${new Date(latest.timestamp * 1000).toLocaleString('ja-JP')}`;
        }
      }

      function formatTime(timestamp: number, hours: number): string {
        const date = new Date(timestamp * 1000);
        if (hours <= 24) {
          return date.toLocaleTimeString('ja-JP', { hour: '2-digit', minute: '2-digit' });
        } else {
          return date.toLocaleDateString('ja-JP', { month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' });
        }
      }

      function downsample<T>(data: T[], maxPoints: number): T[] {
        if (data.length <= maxPoints) return data;
        const step = Math.ceil(data.length / maxPoints);
        return data.filter((_, i) => i % step === 0);
      }

      function createCharts(data: SensorData[], hours: number): void {
        if (data.length === 0) {
          console.log('No data to display');
          return;
        }

        // Downsample for performance (max 200 points on chart)
        const sampled = downsample(data, 200);
        console.log('Creating charts with', sampled.length, 'points (from', data.length, ')');

        const labels = sampled.map(d => formatTime(d.timestamp, hours));
        const temps = sampled.map(d => d.temperature);
        const humidity = sampled.map(d => d.humidity);
        const co2Values = sampled.map(d => d.co2);
        const batteryValues = sampled.map(d => d.battery_voltage);

        const gridColor = 'rgba(0, 0, 0, 0.06)';
        const tickColor = '#888';

        // Temperature & Humidity Chart
        const ctx1 = document.getElementById('chart-temp-humidity') as HTMLCanvasElement;
        if (tempHumidityChart) {
          tempHumidityChart.destroy();
        }

        tempHumidityChart = new Chart(ctx1, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'Temperature (°C)',
                data: temps,
                borderColor: '#e74c3c',
                backgroundColor: 'rgba(231, 76, 60, 0.1)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                yAxisID: 'y',
                fill: false,
              },
              {
                label: 'Humidity (%)',
                data: humidity,
                borderColor: '#3498db',
                backgroundColor: 'rgba(52, 152, 219, 0.1)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                yAxisID: 'y1',
                fill: false,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              intersect: false,
              mode: 'index',
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
                labels: {
                  color: tickColor,
                  font: { family: "'Space Mono', monospace", size: 11 },
                  boxWidth: 12,
                  padding: 20,
                },
              },
            },
            scales: {
              x: {
                grid: { color: gridColor },
                ticks: {
                  color: tickColor,
                  font: { size: 10 },
                  maxRotation: 0,
                  autoSkip: true,
                  maxTicksLimit: 8,
                },
              },
              y: {
                position: 'left',
                title: { display: true, text: '°C', color: '#e74c3c', font: { size: 11 } },
                grid: { color: gridColor },
                ticks: { color: tickColor, font: { size: 10 } },
              },
              y1: {
                position: 'right',
                title: { display: true, text: '%', color: '#3498db', font: { size: 11 } },
                grid: { drawOnChartArea: false },
                ticks: { color: tickColor, font: { size: 10 } },
              },
            },
          },
        });

        // CO2 Chart
        const ctx2 = document.getElementById('chart-co2') as HTMLCanvasElement;
        if (co2Chart) {
          co2Chart.destroy();
        }

        co2Chart = new Chart(ctx2, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'CO₂ (ppm)',
                data: co2Values,
                borderColor: '#f39c12',
                backgroundColor: 'rgba(243, 156, 18, 0.15)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                fill: true,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              intersect: false,
              mode: 'index',
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
                labels: {
                  color: tickColor,
                  font: { family: "'Space Mono', monospace", size: 11 },
                  boxWidth: 12,
                  padding: 20,
                },
              },
            },
            scales: {
              x: {
                grid: { color: gridColor },
                ticks: {
                  color: tickColor,
                  font: { size: 10 },
                  maxRotation: 0,
                  autoSkip: true,
                  maxTicksLimit: 8,
                },
              },
              y: {
                suggestedMin: 400,
                title: { display: true, text: 'ppm', color: '#f39c12', font: { size: 11 } },
                grid: { color: gridColor },
                ticks: { color: tickColor, font: { size: 10 } },
              },
            },
          },
        });

        // Battery Chart
        const ctx3 = document.getElementById('chart-battery') as HTMLCanvasElement;
        if (batteryChart) {
          batteryChart.destroy();
        }

        batteryChart = new Chart(ctx3, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'Battery (V)',
                data: batteryValues,
                borderColor: '#27ae60',
                backgroundColor: 'rgba(39, 174, 96, 0.15)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                fill: true,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              intersect: false,
              mode: 'index',
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
                labels: {
                  color: tickColor,
                  font: { family: "'Space Mono', monospace", size: 11 },
                  boxWidth: 12,
                  padding: 20,
                },
              },
            },
            scales: {
              x: {
                grid: { color: gridColor },
                ticks: {
                  color: tickColor,
                  font: { size: 10 },
                  maxRotation: 0,
                  autoSkip: true,
                  maxTicksLimit: 8,
                },
              },
              y: {
                suggestedMin: 3.0,
                suggestedMax: 4.5,
                title: { display: true, text: 'V', color: '#27ae60', font: { size: 11 } },
                grid: { color: gridColor },
                ticks: { color: tickColor, font: { size: 10 } },
              },
            },
          },
        });

        console.log('Charts created successfully');
      }

      async function loadData(hours: number): Promise<void> {
        currentHours = hours;
        console.log('Loading data for', hours, 'hours');
        const data = await fetchData(hours);

        if (data.length > 0) {
          updateCurrentValues(data);
          createCharts(data, hours);
        } else {
          console.log('No data received');
        }
      }

      // Time selector buttons
      document.querySelectorAll('.time-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.time-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          const hours = parseInt((btn as HTMLElement).dataset.hours || '24');
          loadData(hours);
        });
      });

      // Initial load
      console.log('Starting initial data load...');
      loadData(24);

      // Auto refresh every 5 minutes
      setInterval(() => loadData(currentHours), 5 * 60 * 1000);
    </script>
  </body>
</html>
