---
// Server-side: could fetch initial data here if needed
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EPDEnvClock Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
    <style is:global>
      :root {
        --bg-primary: #fafafa;
        --bg-secondary: #f0f0f0;
        --bg-card: #ffffff;
        --text-primary: #1a1a1a;
        --text-secondary: #666666;
        --accent-temp: #e74c3c;
        --accent-humidity: #3498db;
        --accent-co2: #f39c12;
        --accent-battery: #27ae60;
        --border-color: #e0e0e0;
        --shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif;
        background: var(--bg-primary);
        color: var(--text-primary);
        min-height: 100vh;
        padding: 4rem 2rem 2rem;
      }

      .dashboard {
        max-width: 1200px;
        margin: 0 auto;
      }

      header {
        margin-bottom: 2rem;
      }

      h1 {
        font-size: 1.75rem;
        font-weight: 600;
        color: var(--text-primary);
      }

      h1 span {
        color: var(--text-secondary);
        font-weight: 400;
      }

      .stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
      }

      @media (max-width: 768px) {
        body {
          padding: 1rem 0.75rem;
        }

        header {
          margin-bottom: 1rem;
        }

        h1 {
          font-size: 1.3rem;
        }

        .stats {
          grid-template-columns: repeat(2, 1fr);
          gap: 0.5rem;
          margin-bottom: 1rem;
        }

        .stat-card {
          padding: 0.75rem;
          border-radius: 8px;
        }

        .stat-label {
          font-size: 0.65rem;
          margin-bottom: 0.25rem;
        }

        .stat-value {
          font-size: 1.6rem;
        }

        .stat-unit {
          font-size: 0.75rem;
        }

        .stat-minmax {
          flex-direction: column;
          gap: 0;
          font-size: 0.8rem;
          line-height: 0.2;
        }

        .stat-minmax span {
          gap: 0.2rem;
        }

        .stat-minmax .label {
          font-size: 0.6rem;
        }

        .time-selector {
          flex-wrap: wrap;
          gap: 0.35rem;
          margin-bottom: 1rem;
        }

        .time-btn {
          padding: 0.35rem 0.6rem;
          font-size: 0.7rem;
        }

        .charts {
          gap: 0.75rem;
        }

        .chart-container {
          padding: 0.75rem;
          border-radius: 8px;
        }

        .chart-title {
          font-size: 0.8rem;
          margin-bottom: 0.5rem;
        }

        .chart-wrapper {
          height: 180px;
        }

        .last-update {
          margin-top: 0.25rem;
          font-size: 0.65rem;
        }
      }

      .stat-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: var(--shadow);
      }

      .stat-label {
        font-size: 0.8rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        font-family: 'Space Mono', monospace;
      }

      .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        font-family: 'Space Mono', monospace;
      }

      .stat-value.temp { color: var(--accent-temp); }
      .stat-value.humidity { color: var(--accent-humidity); }
      .stat-value.co2 { color: var(--accent-co2); }
      .stat-value.battery { color: var(--accent-battery); }

      .stat-unit {
        font-size: 1rem;
        color: var(--text-secondary);
        font-weight: 400;
      }

      .stat-minmax {
        display: flex;
        gap: 1.25rem;
        margin-top: 0.75rem;
        font-family: 'Space Mono', monospace;
        font-size: 1.1rem;
        color: var(--text-secondary);
      }

      .stat-minmax span {
        display: flex;
        align-items: baseline;
        gap: 0.3rem;
      }

      .stat-minmax .label {
        opacity: 0.6;
        font-size: 0.7rem;
        text-transform: uppercase;
      }

      .stat-value-row {
        display: flex;
        align-items: baseline;
        gap: 0.75rem;
      }

      .stat-voltage {
        font-family: 'Space Mono', monospace;
        font-size: 1rem;
        color: var(--text-secondary);
        opacity: 0.7;
      }

      .voltage-small {
        font-size: 0.75em;
        opacity: 0.7;
        margin-left: 0.2em;
      }


      .charts {
        display: grid;
        gap: 1.5rem;
      }

      .chart-container {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: var(--shadow);
      }

      .chart-title {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        font-weight: 500;
      }

      .chart-wrapper {
        position: relative;
        height: 280px;
      }

      .time-selector {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
      }

      .time-btn {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        cursor: pointer;
        font-family: 'Space Mono', monospace;
        font-size: 0.8rem;
        transition: all 0.2s;
      }

      .time-btn:hover {
        background: var(--bg-card);
        border-color: var(--text-secondary);
      }

      .time-btn.active {
        background: var(--text-primary);
        color: var(--bg-card);
        border-color: var(--text-primary);
      }

      .last-update {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-top: 0.5rem;
        font-family: 'Space Mono', monospace;
      }

      .error-message {
        background: #fee;
        border: 1px solid #fcc;
        color: #c00;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="dashboard">
      <header>
        <h1>EPDEnvClock <span>Dashboard</span></h1>
        <div class="last-update" id="last-update"></div>
      </header>

      <div class="error-message" id="error-message"></div>

      <div class="time-selector">
        <button class="time-btn" data-hours="6">6H</button>
        <button class="time-btn" data-hours="12">12H</button>
        <button class="time-btn active" data-hours="24">24H</button>
        <button class="time-btn" data-hours="72">3D</button>
        <button class="time-btn" data-hours="168">7D</button>
      </div>

      <div class="stats">
        <div class="stat-card">
          <div class="stat-label">Temperature</div>
          <div class="stat-value temp" id="current-temp">--<span class="stat-unit">°C</span></div>
          <div class="stat-minmax" id="minmax-temp">
            <span><span class="label">min</span>--</span>
            <span><span class="label">max</span>--</span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Humidity</div>
          <div class="stat-value humidity" id="current-humidity">--<span class="stat-unit">%</span></div>
          <div class="stat-minmax" id="minmax-humidity">
            <span><span class="label">min</span>--</span>
            <span><span class="label">max</span>--</span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-label">CO₂</div>
          <div class="stat-value co2" id="current-co2">--<span class="stat-unit">ppm</span></div>
          <div class="stat-minmax" id="minmax-co2">
            <span><span class="label">min</span>--</span>
            <span><span class="label">max</span>--</span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Battery</div>
          <div class="stat-value-row">
            <div class="stat-value battery" id="current-battery">--<span class="stat-unit">%</span></div>
            <div class="stat-voltage" id="battery-voltage">(--V)</div>
          </div>
          <div class="stat-minmax" id="minmax-battery-combined">
            <span><span class="label">min</span>--% (--V)</span>
            <span><span class="label">max</span>--% (--V)</span>
          </div>
        </div>
      </div>

      <div class="charts">
        <div class="chart-container">
          <div class="chart-title">Temperature & Humidity</div>
          <div class="chart-wrapper">
            <canvas id="chart-temp-humidity"></canvas>
          </div>
        </div>

        <div class="chart-container">
          <div class="chart-title">CO₂ Concentration</div>
          <div class="chart-wrapper">
            <canvas id="chart-co2"></canvas>
          </div>
        </div>

        <div class="chart-container">
          <div class="chart-title">Battery Level</div>
          <div class="chart-wrapper">
            <canvas id="chart-battery"></canvas>
          </div>
        </div>

        <div class="chart-container">
          <div class="chart-title">RTC Drift (ms per hour)</div>
          <div class="chart-wrapper">
            <canvas id="chart-rtc-drift"></canvas>
          </div>
        </div>
      </div>
    </div>

    <script>
      import Chart from 'chart.js/auto';
      import 'chartjs-adapter-date-fns';

      interface SensorData {
        timestamp: number;
        temperature: number;
        humidity: number;
        co2: number;
        battery_voltage: number | null;
        battery_percent: number | null;
        battery_charging: number | null;  // 1 = charging, 0 = not charging
        rtc_drift_ms: number | null;
      }

      interface MinMax {
        min: number | null;
        max: number | null;
      }

      interface Stats {
        temperature: MinMax;
        humidity: MinMax;
        co2: MinMax;
        battery_voltage: MinMax;
        battery_percent: MinMax;
      }

      interface ApiResponse {
        success: boolean;
        count: number;
        data: SensorData[];
        stats?: Stats;
      }

      let tempHumidityChart: Chart | null = null;
      let co2Chart: Chart | null = null;
      let batteryChart: Chart | null = null;
      let rtcDriftChart: Chart | null = null;
      let currentHours = 24;

      function showError(message: string): void {
        const el = document.getElementById('error-message');
        if (el) {
          el.textContent = message;
          el.style.display = 'block';
        }
      }

      function hideError(): void {
        const el = document.getElementById('error-message');
        if (el) {
          el.style.display = 'none';
        }
      }

      // In dev mode, you can use production API by adding ?prod to the URL
      const useProductionApi = window.location.search.includes('prod');
      const apiBase = useProductionApi ? 'https://epd-sensor-dashboard.pages.dev' : '';

      async function fetchData(hours: number): Promise<ApiResponse | null> {
        try {
          const response = await fetch(`${apiBase}/api/data?hours=${hours}`);
          if (!response.ok) {
            throw new Error(`HTTP ${response.status}`);
          }
          const json: ApiResponse = await response.json();
          console.log('Fetched data:', json.count, 'points');
          hideError();
          return json;
        } catch (error) {
          console.error('Failed to fetch data:', error);
          showError(`Failed to fetch data: ${error instanceof Error ? error.message : 'Unknown error'}`);
          return null;
        }
      }

      function updateCurrentValues(data: SensorData[], stats?: Stats): void {
        if (data.length === 0) return;

        const latest = data[data.length - 1];

        const tempEl = document.getElementById('current-temp');
        const humidityEl = document.getElementById('current-humidity');
        const co2El = document.getElementById('current-co2');
        const batteryEl = document.getElementById('current-battery');
        const updateEl = document.getElementById('last-update');

        if (tempEl) {
          tempEl.innerHTML = `${latest.temperature?.toFixed(1) ?? '--'}<span class="stat-unit">°C</span>`;
        }
        if (humidityEl) {
          humidityEl.innerHTML = `${latest.humidity?.toFixed(1) ?? '--'}<span class="stat-unit">%</span>`;
        }
        if (co2El) {
          co2El.innerHTML = `${latest.co2 ?? '--'}<span class="stat-unit">ppm</span>`;
        }
        if (batteryEl) {
          batteryEl.innerHTML = `${latest.battery_percent?.toFixed(0) ?? '--'}<span class="stat-unit">%</span>`;
        }
        const batteryVoltageEl = document.getElementById('battery-voltage');
        if (batteryVoltageEl) {
          batteryVoltageEl.textContent = latest.battery_voltage ? `(${latest.battery_voltage.toFixed(2)}V)` : '(--V)';
        }
        if (updateEl) {
          updateEl.textContent = `Last data: ${new Date(latest.timestamp * 1000).toLocaleString('ja-JP')}`;
        }

        // Update min/max values
        if (stats) {
          updateMinMax('minmax-temp', stats.temperature, 1);
          updateMinMax('minmax-humidity', stats.humidity, 1);
          updateMinMax('minmax-co2', stats.co2, 0);
          updateBatteryMinMax(stats.battery_percent, stats.battery_voltage);
        }
      }

      function updateMinMax(elementId: string, minmax: MinMax, decimals: number): void {
        const el = document.getElementById(elementId);
        if (!el) return;

        const minVal = minmax.min !== null ? minmax.min.toFixed(decimals) : '--';
        const maxVal = minmax.max !== null ? minmax.max.toFixed(decimals) : '--';

        el.innerHTML = `
          <span><span class="label">min</span>${minVal}</span>
          <span><span class="label">max</span>${maxVal}</span>
        `;
      }

      function updateBatteryMinMax(percent: MinMax, voltage: MinMax): void {
        const el = document.getElementById('minmax-battery-combined');
        if (!el) return;

        const minPct = percent.min !== null ? percent.min.toFixed(0) : '--';
        const maxPct = percent.max !== null ? percent.max.toFixed(0) : '--';
        const minV = voltage.min !== null ? voltage.min.toFixed(2) : '--';
        const maxV = voltage.max !== null ? voltage.max.toFixed(2) : '--';

        el.innerHTML = `
          <span><span class="label">min</span>${minPct}<span class="voltage-small">(${minV})</span></span>
          <span><span class="label">max</span>${maxPct}<span class="voltage-small">(${maxV})</span></span>
        `;
      }

      function getTimeScaleConfig(hours: number) {
        // Determine unit and step based on time range
        // Also return min/max to always show the full selected time range
        const now = Date.now();
        const minTime = now - (hours * 60 * 60 * 1000);

        if (hours <= 6) {
          return { unit: 'hour' as const, stepSize: 1, min: minTime, max: now, format: 'HH:mm' };
        } else if (hours <= 12) {
          return { unit: 'hour' as const, stepSize: 2, min: minTime, max: now, format: 'HH:mm' };
        } else if (hours <= 24) {
          return { unit: 'hour' as const, stepSize: 3, min: minTime, max: now, format: 'HH:mm' };
        } else if (hours <= 72) {
          // 3 days: show daily at noon
          return { unit: 'day' as const, stepSize: 1, min: minTime, max: now, format: 'MM/dd (EEE)' };
        } else {
          // 7 days: show daily
          return { unit: 'day' as const, stepSize: 1, min: minTime, max: now, format: 'MM/dd (EEE)' };
        }
      }

      function downsample<T>(data: T[], maxPoints: number): T[] {
        if (data.length <= maxPoints) return data;
        const step = Math.ceil(data.length / maxPoints);
        return data.filter((_, i) => i % step === 0);
      }

      function createCharts(data: SensorData[], hours: number): void {
        if (data.length === 0) {
          console.log('No data to display');
          return;
        }

        // Downsample for performance (max 200 points on chart)
        const sampled = downsample(data, 200);
        console.log('Creating charts with', sampled.length, 'points (from', data.length, ')');

        // Convert to {x, y} format for time scale
        const temps = sampled.map(d => ({ x: d.timestamp * 1000, y: d.temperature }));
        const humidityData = sampled.map(d => ({ x: d.timestamp * 1000, y: d.humidity }));
        const co2Values = sampled.map(d => ({ x: d.timestamp * 1000, y: d.co2 }));
        const batteryPercent = sampled.map(d => ({ x: d.timestamp * 1000, y: d.battery_percent }));
        const batteryVoltage = sampled.map(d => ({ x: d.timestamp * 1000, y: d.battery_voltage }));
        // Charging overlay: 100 when charging, null otherwise (for fill area)
        const chargingOverlay = sampled.map(d => ({ x: d.timestamp * 1000, y: d.battery_charging === 1 ? 100 : null }));

        const timeConfig = getTimeScaleConfig(hours);
        const gridColor = 'rgba(0, 0, 0, 0.06)';
        const tickColor = '#888';

        // Common x-axis config for time scale
        // Note: Do NOT use time.round - it rounds data points, not just tick labels
        // Use min/max to always show the full selected time range
        const xAxisConfig = {
          type: 'time' as const,
          min: timeConfig.min,
          max: timeConfig.max,
          time: {
            unit: timeConfig.unit,
            stepSize: timeConfig.stepSize,
            displayFormats: {
              hour: timeConfig.format,
              day: timeConfig.format,
            },
          },
          grid: { color: gridColor },
          ticks: {
            color: tickColor,
            font: { size: 10 },
            maxRotation: 0,
          },
        };

        // Temperature & Humidity Chart
        const ctx1 = document.getElementById('chart-temp-humidity') as HTMLCanvasElement;
        if (tempHumidityChart) {
          tempHumidityChart.destroy();
        }

        tempHumidityChart = new Chart(ctx1, {
          type: 'line',
          data: {
            datasets: [
              {
                label: 'Temperature (°C)',
                data: temps,
                borderColor: '#e74c3c',
                backgroundColor: 'rgba(231, 76, 60, 0.1)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                yAxisID: 'y',
                fill: false,
              },
              {
                label: 'Humidity (%)',
                data: humidityData,
                borderColor: '#3498db',
                backgroundColor: 'rgba(52, 152, 219, 0.1)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                yAxisID: 'y1',
                fill: false,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              intersect: false,
              mode: 'index',
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
                labels: {
                  color: tickColor,
                  font: { family: "'Space Mono', monospace", size: 11 },
                  boxWidth: 12,
                  padding: 20,
                },
              },
            },
            scales: {
              x: xAxisConfig,
              y: {
                position: 'left',
                title: { display: true, text: '°C', color: '#e74c3c', font: { size: 11 } },
                grid: { color: gridColor },
                ticks: { color: tickColor, font: { size: 10 } },
              },
              y1: {
                position: 'right',
                title: { display: true, text: '%', color: '#3498db', font: { size: 11 } },
                grid: { drawOnChartArea: false },
                ticks: { color: tickColor, font: { size: 10 } },
              },
            },
          },
        });

        // CO2 Chart
        const ctx2 = document.getElementById('chart-co2') as HTMLCanvasElement;
        if (co2Chart) {
          co2Chart.destroy();
        }

        co2Chart = new Chart(ctx2, {
          type: 'line',
          data: {
            datasets: [
              {
                label: 'CO₂ (ppm)',
                data: co2Values,
                borderColor: '#f39c12',
                backgroundColor: 'rgba(243, 156, 18, 0.15)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                fill: true,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              intersect: false,
              mode: 'index',
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
                labels: {
                  color: tickColor,
                  font: { family: "'Space Mono', monospace", size: 11 },
                  boxWidth: 12,
                  padding: 20,
                },
              },
            },
            scales: {
              x: xAxisConfig,
              y: {
                suggestedMin: 400,
                title: { display: true, text: 'ppm', color: '#f39c12', font: { size: 11 } },
                grid: { color: gridColor },
                ticks: { color: tickColor, font: { size: 10 } },
              },
            },
          },
        });

        // Battery Chart
        const ctx3 = document.getElementById('chart-battery') as HTMLCanvasElement;
        if (batteryChart) {
          batteryChart.destroy();
        }

        batteryChart = new Chart(ctx3, {
          type: 'line',
          data: {
            datasets: [
              {
                label: 'Charging',
                data: chargingOverlay,
                borderColor: 'transparent',
                backgroundColor: 'rgba(231, 76, 60, 0.2)',
                borderWidth: 0,
                pointRadius: 0,
                tension: 0,
                fill: 'origin',
                yAxisID: 'y',
                spanGaps: false,  // Don't connect null points
              },
              {
                label: 'Percent (%)',
                data: batteryPercent,
                borderColor: '#27ae60',
                backgroundColor: 'rgba(39, 174, 96, 0.15)',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                fill: true,
                yAxisID: 'y',
              },
              {
                label: 'Voltage (V)',
                data: batteryVoltage,
                borderColor: '#8bc34a',
                backgroundColor: 'transparent',
                borderWidth: 2,
                pointRadius: 0,
                tension: 0.3,
                fill: false,
                yAxisID: 'y1',
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              intersect: false,
              mode: 'index',
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
                labels: {
                  color: tickColor,
                  font: { family: "'Space Mono', monospace", size: 11 },
                  boxWidth: 12,
                  padding: 20,
                },
              },
            },
            scales: {
              x: xAxisConfig,
              y: {
                type: 'linear',
                position: 'left',
                suggestedMin: 0,
                suggestedMax: 100,
                title: { display: true, text: '%', color: '#27ae60', font: { size: 11 } },
                grid: { color: gridColor },
                ticks: { color: '#27ae60', font: { size: 10 } },
              },
              y1: {
                type: 'linear',
                position: 'right',
                suggestedMin: 3.0,
                suggestedMax: 4.2,
                title: { display: true, text: 'V', color: '#8bc34a', font: { size: 11 } },
                grid: { drawOnChartArea: false },
                ticks: { color: '#8bc34a', font: { size: 10 } },
              },
            },
          },
        });

        // RTC Drift Chart (only non-null values, ~1 per hour)
        const rtcDriftData = data
          .filter(d => d.rtc_drift_ms !== null)
          .map(d => ({ x: d.timestamp * 1000, y: d.rtc_drift_ms }));

        const ctx4 = document.getElementById('chart-rtc-drift') as HTMLCanvasElement;
        if (rtcDriftChart) {
          rtcDriftChart.destroy();
        }

        // Calculate bar thickness based on number of data points (min 4px, max 20px)
        const rtcBarThickness = Math.max(4, Math.min(20, Math.floor(600 / rtcDriftData.length)));

        rtcDriftChart = new Chart(ctx4, {
          type: 'bar',
          data: {
            datasets: [
              {
                label: 'RTC Drift (ms)',
                data: rtcDriftData,
                backgroundColor: rtcDriftData.map(d =>
                  (d.y as number) >= 0 ? 'rgba(155, 89, 182, 0.7)' : 'rgba(231, 76, 60, 0.7)'
                ),
                borderColor: rtcDriftData.map(d =>
                  (d.y as number) >= 0 ? '#9b59b6' : '#e74c3c'
                ),
                borderWidth: 1,
                borderRadius: 2,
                barThickness: rtcBarThickness,
                minBarLength: 3,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              intersect: false,
              mode: 'index',
            },
            plugins: {
              legend: {
                display: true,
                position: 'top',
                labels: {
                  color: tickColor,
                  font: { family: "'Space Mono', monospace", size: 11 },
                  boxWidth: 12,
                  padding: 20,
                },
              },
            },
            scales: {
              x: xAxisConfig,
              y: {
                title: { display: true, text: 'ms', color: '#9b59b6', font: { size: 11 } },
                grid: { color: gridColor },
                ticks: { color: tickColor, font: { size: 10 } },
              },
            },
          },
        });

        console.log('Charts created successfully');
      }

      async function loadData(hours: number): Promise<void> {
        currentHours = hours;
        console.log('Loading data for', hours, 'hours');
        const response = await fetchData(hours);

        if (response && response.data && response.data.length > 0) {
          updateCurrentValues(response.data, response.stats);
          createCharts(response.data, hours);
        } else {
          console.log('No data received');
        }
      }

      // Time selector buttons
      document.querySelectorAll('.time-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.time-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          const hours = parseInt((btn as HTMLElement).dataset.hours || '24');
          loadData(hours);
        });
      });

      // Initial load
      console.log('Starting initial data load...');
      loadData(24);

      // Auto refresh every 5 minutes
      setInterval(() => loadData(currentHours), 5 * 60 * 1000);
    </script>
  </body>
